# Include Freshen libraries as well
dirname = File.dirname(`readlink -f #{$0}`)
$: << File.expand_path("#{dirname}/../lib/")

require 'version'
require 'consoleapplication'

class Freshen < ConsoleApplication
	def initialize()
		super
		@version = "3.0.0alpha1"
#		self.description = "Updates GoboLinux recipes and packages"
		self.credits = "By Michael Homer <michael@e.geek.nz>"
#		self.usage = '[<opts>] [<list>]'
#		self.helpOnNoArguments = false
		addMode('upgrade', 'Upgrade the packages listed, or the whole system if none specified', 'U')
		addOpt('exclude', 'Exclude <list> from consideration', 'x')
	end
end

def backtrace
	puts $!.backtrace.join("\n  ")
end

begin
	trap(0) {
		print "\033];\007"
	}
	$app = Freshen.new
	$app.start
	rescue SystemExit
		# Ignore
	rescue Interrupt
		puts "Interrupt."
	rescue Exception
		if $app.nil? || $app.debug?
			puts "Error [#{$!.class}]: #{$!}"
			backtrace
		else
			puts "Error: {$!}"
		end
end